<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('./components/head') %>
</head>

    <body>

        <%- include('./components/navbar') %>

        <%- include('./components/header') %>

        <main>
            
            <section id="cadastro">

                <form action="/create" method="POST">
                    <div class="item">
                        <input type="text" placeholder="Digite o título da obra" name="title" id="nome" required>
                     </div> 

                     <div class="item">
                        <input type="text" placeholder="Gênero" name="genero" id="genero" required> 
                     </div>
                     
         
                     <div class="item"> 
                        <textarea  name="description" required>Digite a descrição da obra</textarea>
                     </div>

                     <div class="item">
                        <input type="text" placeholder="Ano de lançamento" name="anolancamento" id="ano" required> 
                     </div>
         
                     <div class="item">
                        <input type="text" placeholder="Digite a URL da capa" name="image" required> 
                     </div>
         
                     <div class="item">

                        <button type="submit">Cadastrar</button> 

                     </div>

                </form>

            </section>

        </main>

        <%- include('./components/footer') %>

    </body>
    
</html>